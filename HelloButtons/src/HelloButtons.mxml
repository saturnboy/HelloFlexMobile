<?xml version="1.0" encoding="utf-8"?>
<s:Application
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"
	backgroundColor="#111111">
	
	<fx:Style>
		.greyBtn {
			skinClass: ClassReference("skins.GreyButtonSkin");
		}
		.redBtn {
			skinClass: ClassReference("skins.RedButtonSkin");
			color: #ffffff;
			textShadowColor: #333333;
			textShadowAlpha: 0.4;
		}
		.blackBtn {
			skinClass: ClassReference("skins.BlackButtonSkin");
			color: #ffffff;
			textShadowColor: #333333;
			textShadowAlpha: 0.4;
		}
	</fx:Style>
	
	<s:VGroup left="25" right="25" top="10" bottom="10"
			  horizontalAlign="center" verticalAlign="middle">
		<s:Button label="Normal" styleName="greyBtn"
				  width="100%" maxWidth="300" minHeight="50" />
		<s:Button label="Alert"  styleName="redBtn"
				  width="100%" maxWidth="300" minHeight="50" />
		<s:Button label="Dark"   styleName="blackBtn"
				  width="100%" maxWidth="300" minHeight="50" />
	</s:VGroup>
</s:Application>
